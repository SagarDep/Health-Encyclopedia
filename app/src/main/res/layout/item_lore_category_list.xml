<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/com_list_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/lore_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/default_img"/>

        <TextView
            android:id="@+id/lore_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lore_img"
            android:layout_marginLeft="4dp"
            android:padding="2dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="13sp"
            tools:text="Title"/>

        <TextView
            android:id="@+id/lore_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lore_img"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="4dp"
            android:padding="2dp"
            android:textColor="@color/gray"
            android:textSize="12sp"
            tools:text="Author" />

        <TextView
            android:id="@+id/lore_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lore_author"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="4dp"
            android:padding="2dp"
            android:textColor="@color/gray"
            android:textSize="12sp"
            tools:text="Time" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightgray" />

</LinearLayout>